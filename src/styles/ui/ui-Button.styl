.ui-Button
  position: relative

  display: inline-block
  vertical-align: baseline

  box-sizing: border-box
  max-width: 100%
  height: $Sizes.ButtonHeight
  padding: 0 $Sizes.ButtonPaddings
  border: none
  margin: 0

  white-space: nowrap
  text-decoration: none

  font: inherit
  line-height: $Sizes.ButtonHeight
  background: transparent

  -moz-appearance: none
  cursor: pointer
  user-select: none

  color: $Colors.Misc
  box-shadow: inset 0 0 0 2px

  &::-moz-focus-inner
    padding: 0
    border: none

  &:hover
    color: $Colors.Button

  & > .ui-Icon:first-child
    margin-right: 1.2rem
    margin-top: -3px

    vertical-align: middle

  &_Action
    color: $Colors.ActionButtonText
    background: $Colors.ActionButton

    box-shadow: none

    &:hover,
    &:focus
      color: $Colors.ActionButtonText
      background: $Colors.Button_hover

    &:active
      background: $Colors.Button_active
