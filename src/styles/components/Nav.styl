.Nav
  display: flex
  flex-grow: 1
  align-items: center

  +at-small()
    flex-wrap: wrap

  & > *
    display: inline-block

  &-Address
    position: relative

    display: flex
    flex-shrink: 0
    flex-direction: column
    align-self: stretch
    justify-content: center

    padding-left: 2rem
    margin-right: 3rem

    font-size: 1.4rem
    line-height: 2rem

    & .ui-Icon_Pin
      position: absolute
      right: 100%
      top: 3px
      margin-right: 8px

    &:not(:hover):not(:focus) .ui-Icon_Pin
      color: $Colors.Pin_inactive

    +at-small()
      display: none

    && .ui-Link-Content
      background-image: none

    &&:hover .ui-Link-Content,
    &&:focus .ui-Link-Content
      background-image: linear-gradient(to right, $Colors.LinkUnderline_hover 50%, transparent 0)
      background-repeat: repeat-x
      background-size: 6px 1px
      background-position: 0 calc(50% + 0.6em)

    &-Part
      position: relative
      display: block

    &-City
      font-family: $Fonts.Bold

  &-Action
    height: $Sizes.NavActionHeight
    line-height: @height
    margin-top: -4px
    margin-left: 1.5rem

    text-transform: lowercase

    +at-small()
      height: 6.4rem
      line-height: @height + 0.4rem
      margin: (($Sizes.HeaderHeight_narrow - @height) / 2) 0
      margin-left: auto
      padding: 0 2.5rem

      & .ui-Icon
        display: none

  &-Content
    display: flex
    align-self: stretch
    flex-wrap: wrap

    margin-left: auto

    font-family: $Fonts.Bold
    font-size: 1.5rem
    text-transform: uppercase

    +at-small()
      flex-wrap: nowrap
      order: 1

      margin: 0

      font-size: 2.3rem

  &-Item
    display: inline-block
    display: flex

  &-Link
    position: relative
    display: inline-block
    display: flex
    align-items: center

    padding: 0 1.5rem

    +at-small()
      padding-top: 26px
      padding-bottom: 26px

      :first-child > &
        padding-left: 0

    &:not([href]) > .ui-Link-Content
      padding: 5px 13px 3px
      margin: -5px -13px -3px

      line-height: 2.2rem

      color: $Colors.ActiveItemText
      background: $Colors.ActiveItem

      border-radius: 99px

      +at-small()
        padding: 14px 13px 10px
        margin: -14px -13px -10px

        &:first-child
          margin-left: 0

    &:not(:hover):not(:focus) > .ui-Link-Content
      background-image: none
